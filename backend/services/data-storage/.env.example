# InfluxDB Configuration
# IMPORTANT: Copy this file to .env and update with your actual values
# Never commit .env file to version control

# InfluxDB Admin Credentials
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=change-this-password-in-production

# InfluxDB Organization and Bucket
INFLUXDB_ORG=neurobuildtech
INFLUXDB_BUCKET=sensor_data

# InfluxDB Admin Token (use a strong random token in production)
INFLUXDB_ADMIN_TOKEN=generate-a-secure-token-here

# InfluxDB Host and Port
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086

# Data Retention Policies
RAW_DATA_RETENTION=30d
AGGREGATED_DATA_RETENTION=365d

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_PATH=/backups
BACKUP_RETENTION_DAYS=90
