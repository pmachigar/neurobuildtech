# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_CLIENT_ID=data-ingestion-service
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=neurobuild/sensors

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# WebSocket Configuration
WS_PORT=3001

# Queue Configuration
QUEUE_NAME=sensor-data
DLQ_NAME=sensor-data-dlq
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics Configuration
METRICS_PORT=9090
METRICS_PATH=/metrics
